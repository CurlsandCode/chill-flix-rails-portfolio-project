<h3>Add a New Show: </h3>

<% if @show.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@show.errors.count, "error") %>
      prohibited this show from being saved:
    </h2>

    <ul>
    <% @show.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@show, url: user_shows_path(current_user)) do |f| %>

    <%= f.label "Name"%>
    <%= f.text_field :name %>

    <%= f.label "Air Date"%>
    <%= f.text_field :air_date %>

    <%= f.label "Air Time"%>
    <%= f.text_field :air_time %>

    <%= f.label "Description"%>
    <%= f.text_field :description %>

    <br>
    <p>Choose a network:
      <%= f.collection_select(:network_id, Network.all, :id, :name, prompt: true) %>
    </p>

    <br>
    <p>Choose genres: </p>
    <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name, prompt: true) do |b| %>
      <%= b.label do %>
        <%= b.check_box + b.text %>
        <% end %>
      <% end %>

      <%= f.fields_for :genres, Genre.new do |genre_builder| %>
        Add new genre: <%= genre_builder.text_field :name %>
      <% end %>

      <br>

    <%= f.submit %>
<% end %>
